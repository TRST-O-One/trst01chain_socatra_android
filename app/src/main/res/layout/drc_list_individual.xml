                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtDateOfPlantation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="2023-06-23"
                android:textSize="14sp"
                android:textStyle="bold" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/drcdocument"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_baseline_agriculture_24" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:text="Plot Status:"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtPlotBoundStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_cancel_24"
                android:ellipsize="end"
                android:gravity="center|left"
                android:textSize="12sp"
