<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@null"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <TextView
        android:id="@+id/txt_grn_details"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/grn_details"
        android:textColor="@color/Green"
        android:textSize="25sp" />



    <!--GRN No-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_grn_no"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/grn_no"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_grn_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25ssp"
                android:fontFamily="montserrat_regular"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--Actual Quantity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_actual_quantity"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/quantity"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/grey"            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">
            </FrameLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_actual_quantity_drc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25ssp"
                android:enabled="false"
                android:background="@null"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="@dimen/_6ssp"
                android:textColor="@color/enabled_color"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:textSize="@dimen/_10ssp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <!--DRC-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_drc"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/drcpercentage"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border">
            </FrameLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_drc1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25ssp"
                android:background="@null"
                android:enabled="true"
                android:maxLength="3"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="@dimen/_6ssp"
                android:textColor="@color/enabled_color"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:textSize="@dimen/_10ssp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/txtBackCdial"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/cancel"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtSaveCdial"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>













</LinearLayout>