<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_home_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/headerView"
            layout="@layout/sample_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="-1dp"
            tools:ignore="IncludeLayoutParam" />

    </RelativeLayout>

<!--    android:layout_gravity="start"-->

    <LinearLayout
        android:id="@+id/linerLayoutStart"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:layout_gravity="start"
        android:focusable="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_100ssp"
                    android:layout_height="@dimen/_80ssp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logotrace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_word_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_how_to_reg_24"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text=" : "
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="@string/name"
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_word_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_factory_24"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="@string/role"
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text=" : "
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/txtRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="@string/role"
                    android:textColor="@color/black"
                    android:textFontWeight="300"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold|italic" />
                </LinearLayout>

                <!--    <TextView-->
                <!--        android:id="@+id/txtWareHouse"-->
                <!--        android:layout_width="wrap_content"-->
                <!--        android:layout_height="wrap_content"-->
                <!--        android:text="wh1"-->
                <!--        android:textColor="@color/black"-->
                <!--        android:drawableStart="@drawable/ic_baseline_factory_24"-->
                <!--        android:drawablePadding="5dp"-->
                <!--        android:textFontWeight="300"-->
                <!--        android:textSize="18sp"-->
                <!--        android:textStyle="bold|italic"-->
                <!--        android:paddingStart="5dp" />-->


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">


                    <!-- Your other views here -->

                    <!-- Empty space to push the TextView to the bottom -->
                    <TextView
                        android:id="@+id/txtactivities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/activities"
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:id="@+id/View_GRN"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <LinearLayout
                        android:id="@+id/ll_grn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ll_batch_processing"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/_25ssp"
                            android:layout_height="@dimen/_25ssp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_4ssp"
                            android:background="@color/white"
                            android:src="@drawable/edit_farmer_icon"
                            app:tint="@color/Green" />

                        <TextView
                            android:id="@+id/txtGrn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/grn"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/View_Drc"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <LinearLayout
                        android:id="@+id/ll_drc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ll_batch_processing"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="@dimen/_25ssp"
                            android:layout_height="@dimen/_25ssp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:background="@color/white"
                            android:src="@drawable/edit_farmer_icon"
                            app:tint="@color/Green" />

                        <TextView
                            android:id="@+id/txtDrc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/drc"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />


                    </LinearLayout>

                    <View
                        android:id="@+id/View_BatchProcessing"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <LinearLayout
                        android:id="@+id/ll_batch_processing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ll_batch_processing"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pipeImgBack"
                            android:layout_width="@dimen/_25ssp"
                            android:layout_height="@dimen/_25ssp"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:background="@color/white"
                            android:src="@drawable/batch_processing"
                            app:tint="@color/Green" />

                        <TextView
                            android:id="@+id/txtbatchprocess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/batch_processing"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/View_QualityCheck"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <LinearLayout
                        android:id="@+id/ll_Quality_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ll_batch_processing"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pipeImgBack1"
                            android:layout_width="@dimen/_25ssp"
                            android:layout_height="@dimen/_25ssp"
                            android:layout_marginStart="@dimen/_2ssp"
                            android:background="@color/white"
                            android:src="@drawable/batch_processing"
                            app:tint="@color/Green" />

                        <TextView
                            android:id="@+id/txtqualitycheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/quality_check"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <LinearLayout
                        android:id="@+id/ll_invoice_main_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_ll_batch_processing"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginStart="@dimen/_4ssp"
                            android:background="@color/white"
                            android:src="@drawable/doc_details_icon"
                            app:tint="@color/Green" />

                        <TextView
                            android:id="@+id/txtinvoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/invoice"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ll_change_lang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_logout"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginStart="@dimen/_4ssp"
                            android:background="@color/white"
                            android:src="@drawable/new_lang" />

                        <TextView
                            android:id="@+id/txtchangelanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/change_language"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <LinearLayout
                        android:id="@+id/ll_log_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_logout"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginStart="@dimen/_4ssp"
                            android:background="@color/white"
                            android:rotation="180"
                            android:src="@drawable/logout_icon"
                            app:tint="@color/Green" />

                        <TextView
                            android:id="@+id/txtlogout"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:text="@string/logout"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_word_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="@string/app_version"
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text=" : "
                        android:textColor="@color/black"
                        android:textFontWeight="300"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txt_app_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/app_version"
                        android:textColor="@color/Green"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>