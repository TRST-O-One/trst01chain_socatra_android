   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center"
       android:layout_marginTop="@dimen/_10ssp"
       android:weightSum="1">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_60ssp"
          android:layout_marginEnd="@dimen/_60ssp"
          android:visibility="visible"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_mapping_details"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_60sdp"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10ssp"
                   android:src="@drawable/baseline_person"
                   app:tint="@color/Orange" />

               <TextView
                   android:id="@+id/farmer_mapping"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_medium"
                   android:paddingBottom="@dimen/_8ssp"
                   android:text="@string/farmer_mapping"
                   android:textSize="@dimen/_10ssp" />

            </LinearLayout>

         </androidx.cardview.widget.CardView>


      </LinearLayout>



