<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/Green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25ssp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_4ssp"
            android:padding="@dimen/_4ssp"
            android:src="@drawable/back"
            android:tintMode="@color/white"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/print"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:padding="2dp"
            android:src="@drawable/logotrack"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/txt_heading_print"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="@dimen/_80ssp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15ssp"
            android:background="@drawable/rectangular_curved_box"
            android:gravity="center"
            android:text="@string/print"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/_4ssp"
            android:layout_height="@dimen/_24sdp"

            android:layout_weight="0.1"
            android:src="@drawable/back"
            app:tint="@color/Green" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svDealer"
            android:layout_width="150dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_ui_white_box"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:visibility="gone"
            app:queryHint="Search here"
            app:searchIcon="@drawable/ic_baseline_search_24" />

        <TextView
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="right"
            android:text="Dealers List"

            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/emptyListImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="List is Empty"
                android:textColor="@color/Green"
                android:textSize="@dimen/_25ssp"
                android:visibility="visible" />


            <ImageView

                android:layout_width="match_parent"
                android:layout_height="@dimen/_30ssp"
                android:src="@drawable/emptylist_icon" />


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_print_risk_assesment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>
</LinearLayout>