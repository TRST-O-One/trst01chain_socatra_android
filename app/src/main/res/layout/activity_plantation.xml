                    app:cardCornerRadius="3.9dp"
                    app:cardElevation="2.6dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFarmerCodeAddPlant"
                        style="@style/CustomEditTextPadding5dp"
