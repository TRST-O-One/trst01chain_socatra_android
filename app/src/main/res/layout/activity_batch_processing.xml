<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/Green">

        <ImageView
            android:id="@+id/ccx_logo_white"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"

            android:padding="2dp"
            android:src="@drawable/logotrack"
            tools:ignore="RtlCompat" />


        <ImageView
            android:id="@+id/img_header"
            android:layout_width="50dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:tintMode="@color/white" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="14dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_weight="0.3"
            android:src="@drawable/back"
            app:tint="@color/Green" />


        <TextView
            android:id="@+id/txt_batch_grn_details"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="right"
            android:text="@string/batch_grn_details"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13sp"
        android:layout_marginEnd="13sp"
        android:orientation="vertical">


        <!--Batch No-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_batch_no"
                style="@style/CustomTextViewPadding5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.4"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/batch_no"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:cardBackgroundColor="@color/grey"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="@dimen/_2sdp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">
                </FrameLayout>

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/et_batch_no"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25ssp"
                    android:background="@null"
                    android:enabled="false"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_6ssp"
                    android:textColor="@color/enabled_color"
                    android:textCursorDrawable="@null"

                    android:textSize="@dimen/_10ssp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--Batch created Date-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_batch_created_date"
                style="@style/CustomTextViewPadding5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.4"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/date"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                app:cardBackgroundColor="@color/grey"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="@dimen/_2sdp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">
                </FrameLayout>

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/et_date"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25ssp"
                    android:background="@null"
                    android:enabled="false"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_6ssp"
                    android:textColor="@color/enabled_color"
                    android:textCursorDrawable="@null"

                    android:textSize="@dimen/_10ssp" />
<!--                <ImageButton-->
<!--                    android:id="@+id/btn_open_date_picker"-->
<!--                    android:layout_width="32dp"-->
<!--                    android:layout_height="@dimen/_20ssp"-->
<!--                    android:layout_gravity="center_vertical|end"-->
<!--                    android:background="?attr/selectableItemBackground"-->
<!--                    android:contentDescription="Open Date Picker"-->
<!--                    android:padding="@dimen/_8sdp"-->
<!--                    android:src="@drawable/ic_calendar" />-->

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llChildrenTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_list_of_grn"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="0.8"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/list_of_grn"/>

                <TextView
                    android:id="@+id/add_batch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:text="@string/add_grn_plus"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16ssp"
                android:visibility="visible">

                <TableLayout
                    android:id="@+id/childrenTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <!-- Header row -->
                    <TableRow>
                        <TextView
                            android:id="@+id/txt_child_grn_no"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/grn_no"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/txt_child_actual_quantity"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="@string/actual_quantity"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="4dp"-->
<!--                            android:text="Consumed Quantity"-->
<!--                            android:textStyle="bold"-->
<!--                            android:textSize="18dp"/>-->


                    </TableRow>

                    <!-- Rows for child details will be added programmatically -->
                </TableLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14ssp"
                    android:id="@+id/recycleBatchgrn"
                    android:scrollbars="vertical"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_save_plot"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txtSave_Batch"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                />


        </LinearLayout>
















    </LinearLayout>
</LinearLayout>