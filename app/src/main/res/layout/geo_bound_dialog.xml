<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:background="@null"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fontFamily="@font/montserrat_medium"
       android:text="Take Geo-boundaries"
       android:textColor="@color/Orange"
       android:gravity="center"
       android:textSize="25sp" />

   <TextView
       android:id="@+id/selectedPlotGeo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fontFamily="@font/montserrat_medium"
       android:text="Plot Code :"
       android:textColor="@color/Orange"
       android:gravity="center"
       android:textSize="16sp" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/_15sdp"
       android:weightSum="2">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="@dimen/_100sdp"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_map"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_60sdp"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10ssp"
                   android:src="@drawable/by_coordinate_green" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_medium"
                   android:paddingBottom="@dimen/_8ssp"
                   android:text="By Co-ordinates"
                   android:textSize="@dimen/_10ssp" />

            </LinearLayout>

         </androidx.cardview.widget.CardView>


      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="@dimen/_100sdp"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_walk"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_60sdp"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10ssp"
                   android:src="@drawable/by_walk_green" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_medium"
                   android:paddingBottom="@dimen/_8ssp"
                   android:text="By Walk"
                   android:textSize="@dimen/_10ssp" />

            </LinearLayout>

         </androidx.cardview.widget.CardView>


      </LinearLayout>



   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/_15sdp"
       android:weightSum="2">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="@dimen/_105sdp"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

         <!--<androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="@dimen/_105sdp"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


               <LinearLayout
                   android:id="@+id/ll_kml_reader"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent">

                  <ImageView
                      android:layout_width="@dimen/_80sdp"
                      android:layout_height="@dimen/_60sdp"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_10ssp"
                      android:src="@drawable/baseline_upload_file" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:fontFamily="@font/montserrat_medium"
                      android:gravity="center"
                      android:paddingBottom="@dimen/_8ssp"
                      android:text="Upload from file\n(*.kml/*.geojson/*.shp)"
                      android:textSize="@dimen/_10ssp" />
               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginEnd="5dp"
                   android:text="Online"
                   android:textSize="@dimen/_11ssp"
                   android:textColor="@color/Orange"
                   android:textStyle="bold"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

         </androidx.cardview.widget.CardView>

      </LinearLayout>

      <!--sec-->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="@dimen/_105sdp"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

            <!--<androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_105sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_6ssp"
                app:cardUseCompatPadding="false">-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


               <LinearLayout
                   android:id="@+id/ll_sec_map"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent">

                  <ImageView
                      android:layout_width="@dimen/_80sdp"
                      android:layout_height="@dimen/_60sdp"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/_10ssp"
                      android:src="@drawable/by_walk_with_map_green" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:fontFamily="@font/montserrat_medium"
                      android:gravity="center"
                      android:paddingBottom="@dimen/_8ssp"
                      android:text="By Walk with Map"
                      android:textSize="@dimen/_10ssp" />
               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:layout_marginEnd="5dp"
                   android:text="Online"
                   android:textSize="@dimen/_11ssp"
                   android:textColor="@color/Orange"
                   android:textStyle="bold"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

         </androidx.cardview.widget.CardView>

      </LinearLayout>



   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:orientation="horizontal"
       android:weightSum="2">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="visible"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_doc_details"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_60sdp"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10ssp"
                   android:src="@drawable/doc_details_icon"
                   app:tint="@color/Orange" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_medium"
                   android:paddingBottom="@dimen/_8ssp"
                   android:text="Document Details"
                   android:textSize="@dimen/_10ssp" />

            </LinearLayout>

         </androidx.cardview.widget.CardView>


      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="visible"
          android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_margin="@dimen/_8sdp"
             app:cardCornerRadius="@dimen/_6sdp"
             app:cardElevation="@dimen/_6ssp"
             app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_survey_details"
                android:orientation="vertical">

               <ImageView
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_60sdp"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/_10ssp"
                   android:src="@drawable/survey_add_icon"
                   app:tint="@color/Orange"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_medium"
                   android:paddingBottom="@dimen/_8ssp"
                   android:text="Survey"
                   android:textSize="@dimen/_10ssp" />

            </LinearLayout>

         </androidx.cardview.widget.CardView>


      </LinearLayout>

