<!-- selector_ll_batch_processing.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/Green" /> <!-- Change this to your desired green color -->
        </shape>
    </item>
    <item>
        <!-- Default state, use your normal background color here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Use your normal background color -->
        </shape>
    </item>
</selector>
