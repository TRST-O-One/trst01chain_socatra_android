<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/Green">

        <ImageView
            android:id="@+id/ccx_logo_white"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"

            android:padding="2dp"
            android:src="@drawable/logotrack"
            tools:ignore="RtlCompat" />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancel_dealer"
            android:layout_width="14dp"
            android:layout_height="@dimen/_24sdp"
            android:layout_weight="0.3"
            android:src="@drawable/back"
            app:tint="@color/Green" />


        <TextView
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="end"
            android:id="@+id/txt_word_invoice_details_dl"
            android:text="@string/invoice_details"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13sp"
            android:layout_marginEnd="13sp"
            android:orientation="vertical">



            <!--Dealer-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_word_dealer_name"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/dealer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grey"                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_2sdp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border">
                    </FrameLayout>

                    <com.google.android.material.textfield.TextInputEditText

                        android:id="@+id/et_dealer_name"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25ssp"
                        android:background="@null"
                        android:enabled="false"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"
                        android:paddingStart="@dimen/_6ssp"
                        android:textColor="@color/enabled_color"
                        android:textCursorDrawable="@null"

                        android:textSize="@dimen/_10ssp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--Product-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_word_product_dlr"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/product"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grey"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_2sdp">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border">
                    </FrameLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_product"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25ssp"
                        android:text="Natural Rubber"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="@dimen/_6ssp"
                        android:textColor="@color/enabled_color"
                        android:textCursorDrawable="@null"
                        android:inputType="text"
                        android:enabled="false"
                        android:editable="false"
                        android:textSize="@dimen/_10ssp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!--Batch-->
            <LinearLayout
                android:id="@+id/layout_batch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_word_batch"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/batch"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_2sdp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/border">
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_batch_selection"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular">
                        <TextView
                            android:id="@+id/txt_batch_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10ssp"
                            android:text="select"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/txt_no_data_batches"
                            style="@style/CustomEditTextPadding5dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25ssp"
                            android:background="@color/grey"
                            android:enabled="false"
                            android:visibility="gone"
                            android:text="No Batches Found"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingStart="@dimen/_6ssp"
                            android:textColor="@color/enabled_color"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/_10ssp" />



                        <Button android:id="@+id/bt_batch_selection"
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_20ssp"
                            android:layout_marginEnd="@dimen/_8ssp"
                            android:layout_marginStart="@dimen/_8ssp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/baseline_arrow_drop_down_24"/>





                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_batch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25ssp"
                        android:fontFamily="montserrat_regular"
                        android:visibility="gone" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--Net Quantity-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_word_net_qty"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/net_quantity"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_2sdp">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border">
                    </FrameLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_quantity_batch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25ssp"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="@dimen/_6ssp"
                        android:textColor="@color/enabled_color"
                        android:textCursorDrawable="@null"
                        android:inputType="number"
                        android:textSize="@dimen/_10ssp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>



            <!--Shipping To-->
            <LinearLayout
                android:id="@+id/layout_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_word_shipping_to"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/shipping_to"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_2sdp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border">
                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_shipping"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25ssp"
                        android:fontFamily="montserrat_regular"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_no_data_processor"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25ssp"
                        android:background="@color/grey"
                        android:enabled="false"
                        android:visibility="gone"
                        android:text="No Processors Found"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="@dimen/_6ssp"
                        android:textColor="@color/enabled_color"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_10ssp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--Shipping Address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_word_shipping_address"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/shipping_address"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grey"                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_2sdp">



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border">
                    </FrameLayout>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35ssp"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="@dimen/_6ssp"

                        android:enabled="false"
                        android:textColor="@color/enabled_color"
                        android:textCursorDrawable="@null"
                        android:inputType="text"
                        android:textSize="@dimen/_10ssp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/txt_invoice_dealer_save"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>








</LinearLayout>
    </LinearLayout>
</LinearLayout>