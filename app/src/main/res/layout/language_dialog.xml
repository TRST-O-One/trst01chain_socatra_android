<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_history_bottom_sheet_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/change_language"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/english"
        android:background="@drawable/rectangular_box"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_indonesia_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/indonesia"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/txt_french_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:background="@drawable/rectangular_box"
        android:text="@string/french"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/txt_chines_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:background="@drawable/rectangular_box"
        android:text="@string/chines"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />

</LinearLayout>