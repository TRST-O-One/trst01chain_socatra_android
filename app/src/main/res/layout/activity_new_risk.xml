<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    header-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/Green">

        <ImageView
            android:id="@+id/ccx_logo_white"
            android:layout_width="89dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"

            android:padding="2dp"
            android:src="@drawable/logotrack"
            tools:ignore="RtlCompat" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/_24ssp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10ssp"
            app:tint="@color/Green" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svSurvey"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:visibility="gone"
            android:layout_weight="0.8"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/bg_ui_white_box"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            app:queryHint="@string/search_here"
            app:searchIcon="@drawable/ic_baseline_search_24" />
        <TextView
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_horizontal"
            android:text="@string/risk_assessment_survey"
            android:id="@+id/txt_word_survey_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

            <Button
                style="@style/CustomTextViewPadding5dp"
                android:layout_width="@dimen/_70ssp"
                android:layout_height="@dimen/_25ssp"
                android:id="@+id/bt_print_data"
                android:layout_toEndOf="@+id/txt_word_survey_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_10ssp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:background="@drawable/rectangular_box_black"
                android:text="@string/preview"
                android:backgroundTint="@color/Light_green"
                android:layout_marginEnd="@dimen/_10ssp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />




    </RelativeLayout>





<LinearLayout
    android:id="@+id/createpdf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_survey_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginBottom="5dp">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:divider="@null"
            android:groupIndicator="@null"
            android:scrollbars="none"
            android:transcriptMode="disabled"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>
</LinearLayout>




</LinearLayout>