<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone"
        android:background="@color/Orange">

        <ImageView
            android:layout_width="@dimen/_35ssp"
            android:layout_height="@dimen/_35ssp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/white"
            android:padding="2dp"
            android:src="@drawable/splashlogo"
            tools:ignore="RtlCompat" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:tintMode="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imgBackFMap"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            app:tint="@color/Orange" />

        <TextView
            android:id="@+id/txtFarmerCodeFMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center|end"
            android:text="Farmer Code : "
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/mapfarmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/mapfarmer"
            android:textColor="@color/Orange"
            android:textSize="@dimen/_26sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:padding="3dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/txtManufacturerFMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Orange"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="@string/Processor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/Light_Orange_shade"
                android:elevation="3dp"
                android:padding="3dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/txtDealerFMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Orange"
                    android:elevation="3dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="@string/Dealer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>