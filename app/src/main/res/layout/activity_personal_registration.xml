<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PersonalRegistrationActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/Orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ccx_logo_white"
            android:layout_width="@dimen/_35ssp"
            android:layout_height="@dimen/_35ssp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/white"
            android:padding="2dp"
            android:src="@drawable/splashlogo"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Add Farmer"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_cancel_personal"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/back"
                    app:tint="@color/Orange" />

                <LinearLayout
                    android:id="@+id/ll_farmer_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/img_picture_farmer"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/farmer_code1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Farmer Code"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />


                    <TextView
                        android:id="@+id/et_farmer_code"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:elevation="3dp"
                        android:enabled="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <com.socatra.excutivechain.helper.CircleImageView
                    android:id="@+id/img_picture_farmer"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10.40dp"
                    android:src="@drawable/baseline_person"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_Personal_Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Personal Details"
                android:textColor="@color/Orange"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/title1"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Title*"
                    android:textColor="@color/colot_text_label"
                    android:textSize="@dimen/_12sdp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_select_title"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_box"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/enabled_color"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firstname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="First Name"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_first_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="textPersonName"
                        android:letterSpacing="0.1"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lastname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Last Name"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_last_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="text"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


            </LinearLayout>

            <!--Third Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fathername1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Father Name"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_father_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="text"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Middle Name"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_middle_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="text"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </LinearLayout>

            <!--Fourth Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/age1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Age"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_farmer_age"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Gender1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Gender"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_gender_selection"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/enabled_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/Orange" />

            <TextView
                android:id="@+id/addressdetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Address Details"
                android:textColor="@color/Orange"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/country1"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Country"
                    android:textColor="@color/colot_text_label"
                    android:textSize="@dimen/_12sdp" />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/et_country_add"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_weight="1.4"
                    android:background="@drawable/rectangular_box" />


            </LinearLayout>


            <!--Sixth Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/state1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="State"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_village_name"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint=""
                        android:inputType="number"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/et_state_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/enabled_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/district1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="District"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/et_district_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/enabled_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <!--Seventh Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subdistrict1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Sub-District"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/et_subdistrict_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/enabled_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/village1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Village"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/sp_village_name_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/enabled_color"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pincode1"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Pincode"
                    android:textColor="@color/colot_text_label"
                    android:textSize="@dimen/_12sdp" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pin_code_add"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_box"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_6ssp"
                    android:tag="@string/MANDATORY_TAG"
                    android:textColor="@color/enabled_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12sdp" />
                <!--android:inputType="number"-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address1"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Address"
                    android:textColor="@color/colot_text_label"
                    android:textSize="@dimen/_12sdp" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address_add"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_box"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_6ssp"
                    android:tag="@string/MANDATORY_TAG"
                    android:textColor="@color/enabled_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noofplots1"
                    style="@style/CustomTextViewPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.4"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="No. of plots"
                    android:textColor="@color/colot_text_label"
                    android:textSize="@dimen/_12sdp" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_noofplot_add"
                    style="@style/CustomEditTextPadding5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_box"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="number"
                    android:paddingStart="@dimen/_6ssp"
                    android:tag="@string/MANDATORY_TAG"
                    android:textColor="@color/enabled_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/Orange_shade" />

            <TextView
                android:id="@+id/contactdetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Contact Details"
                android:textColor="@color/Orange"
                android:textSize="@dimen/_18ssp" />

            <!--Eighth Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/primary1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Primary Number"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_mobile_number_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"
                        android:maxLength="15"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/secondary1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Secondary Number"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_secondary_number_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/identitydetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Identity Details"
                android:textColor="@color/Orange"
                android:textSize="@dimen/_18ssp" />

            <!--Eighth Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/national1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="National Identity Code"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_NationalIdentityCode_add"
                        style="@style/CustomEditTextPadding5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:background="@drawable/rectangular_box"
                        android:fontFamily="@font/montserrat_regular"
                        android:padding="@dimen/_6ssp"
                        android:tag="@string/MANDATORY_TAG"
                        android:textColor="@color/enabled_color"
                        android:textColorHint="#222222"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nationalcode1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="National Identity Image"
                        android:textColor="@color/colot_text_label"
                        android:textSize="@dimen/_12ssp" />


                    <ImageView
                        android:id="@+id/et_NationalIdentityImg_add"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_dialog"
                        android:elevation="3dp"
                        android:padding="5dp"
                        android:src="@drawable/identity_green" />

                </LinearLayout>


            </LinearLayout>


            <!-- buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_save"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/txt_save_Button"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_bg_corner_orange"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>