<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <!--    header-->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_35sdp"
      android:background="@color/Green">

    <ImageView
        android:id="@+id/ccx_logo_white"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"

        android:padding="2dp"
        android:src="@drawable/logotrack"
        tools:ignore="RtlCompat" />


  </RelativeLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:background="@color/white"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_cancel1"
        android:layout_width="14dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="0.3"
        android:src="@drawable/back"
        app:tint="@color/Green" />


    <TextView
        style="@style/CustomTextViewPadding5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_weight="0.7"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="right"
        android:id="@+id/txt_word_grn_header"
        android:text="@string/grn_details"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />


  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13sp"
        android:layout_marginEnd="13sp"
        android:orientation="vertical">

      <!--Manufacturer-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_word_user"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/user"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/grey"            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border">

          </FrameLayout>

          <com.google.android.material.textfield.TextInputEditText

              android:id="@+id/et_dealer_name"
              style="@style/CustomEditTextPadding5dp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25ssp"
              android:background="@null"
              android:backgroundTint="@android:color/transparent"
              android:enabled="false"
              android:fontFamily="@font/montserrat_regular"
              android:inputType="number"
              android:paddingStart="@dimen/_6ssp"
              android:textColor="@color/enabled_color"
              android:textCursorDrawable="@null"

              android:textSize="@dimen/_10ssp" />

        </androidx.cardview.widget.CardView>

      </LinearLayout>


      <!--Farmer-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_word_farmer"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/farmer"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/grey"            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border"></FrameLayout>

          <com.google.android.material.textfield.TextInputEditText

              android:id="@+id/et_farmer_name"
              style="@style/CustomEditTextPadding5dp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25ssp"
              android:background="@null"
              android:backgroundTint="@android:color/transparent"
              android:enabled="false"
              android:fontFamily="@font/montserrat_regular"
              android:inputType="number"
              android:paddingStart="@dimen/_6ssp"
              android:textColor="@color/enabled_color"
              android:textCursorDrawable="@null"

              android:textSize="@dimen/_10ssp" />

        </androidx.cardview.widget.CardView>

      </LinearLayout>










      <!--Quantity-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_word_quantity"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/quantity"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">


          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border"></FrameLayout>

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/et_quantity"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25ssp"
              android:background="@null"
              android:backgroundTint="@android:color/transparent"
              android:fontFamily="@font/montserrat_regular"
              android:inputType="number"
              android:paddingStart="@dimen/_6ssp"
              android:textColor="@color/enabled_color"
              android:textCursorDrawable="@null"
              android:textSize="@dimen/_10ssp" />

        </androidx.cardview.widget.CardView>


      </LinearLayout>



      <!--Mode of transport-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:visibility="visible">

        <TextView
            android:id="@+id/txt_word_mode_of_transport"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/mode_of_transport"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border"></FrameLayout>

          <androidx.appcompat.widget.AppCompatSpinner
              android:id="@+id/sp_mode_of_transport1"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25ssp"
              android:fontFamily="montserrat_regular"
              android:visibility="visible" />

        </androidx.cardview.widget.CardView>
      </LinearLayout>


      <!--GRN Date-->
      <LinearLayout
          android:id="@+id/layout_grn_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_word_grn_date"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/grn_date"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_weight="1"
            android:id="@+id/cd_date1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border"></FrameLayout>

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/et_grn_date1"
              style="@style/CustomEditTextPadding5dp"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_25ssp"
              android:background="@null"
              android:backgroundTint="@android:color/transparent"
              android:enabled="false"
              android:fontFamily="@font/montserrat_regular"
              android:inputType="number"
              android:paddingStart="@dimen/_6ssp"
              android:textColor="@color/enabled_color"
              android:textCursorDrawable="@null"
              android:textSize="@dimen/_10ssp" />

          <ImageButton
              android:id="@+id/btn_open_date_picker1"
              android:layout_width="32dp"
              android:layout_height="@dimen/_20ssp"
              android:layout_gravity="center_vertical|end"
              android:background="?attr/selectableItemBackground"
              android:contentDescription="Open Date Picker"
              android:padding="@dimen/_8sdp"
              android:src="@drawable/ic_calendar" />

        </androidx.cardview.widget.CardView>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_15ssp"
          android:orientation="vertical">

        <TextView
            android:id="@+id/txt_word_evidence_document"
            style="@style/CustomTextViewPadding5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/grn_evidence"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
        <ImageView
            android:id="@+id/imgGrnEv1"
            android:layout_width="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/upload_doc" />


      </LinearLayout>





      <!--GRN Evidence-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_marginTop="20dp"
          android:orientation="vertical"
          android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_2sdp">

          <TextView
              android:id="@+id/fileDisplay1"
              style="@style/CustomTextViewPadding5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical"
              android:layout_weight="1.4"
              android:fontFamily="@font/montserrat_regular"
              android:text="Selected File:"
              android:textColor="@color/black"
              android:textSize="@dimen/_12ssp"
              android:visibility="gone" />

          <ImageView

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:src="@drawable/upload_doc" />

        </androidx.cardview.widget.CardView>
      </LinearLayout>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="30dp"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

          <TextView
              android:id="@+id/txt_save_grn_farmer"
              android:layout_width="@dimen/_110sdp"
              android:layout_height="@dimen/_30ssp"
              android:background="@drawable/rounded_button"
              android:fontFamily="@font/montserrat_medium"
              android:gravity="center"
              android:text="@string/save"
              android:textAllCaps="false"
              android:textColor="@color/white"
              android:textSize="18sp" />

        </LinearLayout>
      </RelativeLayout>

    </LinearLayout>


  </LinearLayout>

</LinearLayout>