<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8ssp"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_6ssp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/expandablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_question_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:padding="@dimen/_10ssp"
                android:text="Intelli track"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6ssp">

            <TextView
                android:id="@+id/answer_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp" />


            <TextView
                android:id="@+id/Question_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". "
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txt_ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8ssp"
                android:text="Answer"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/Green"
                android:paddingBottom="@dimen/_10ssp"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>




